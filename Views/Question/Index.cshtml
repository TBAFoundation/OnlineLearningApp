@model IEnumerable<OnlineLearningApp.Models.Question>

@{
    ViewData["Title"] = "List of Questions";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">List of Questions</h2>
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <table class="table table-striped table-hover">
                <thead>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model => model.QuestionText)</th>
                        <th>@Html.DisplayNameFor(model => model.QuestionType)</th>
                        <th>@Html.DisplayNameFor(model => model.QuizId)</th>
                        @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                        {
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="text-center">
                            <td>@Html.DisplayFor(modelItem => item.QuestionText)</td>
                            <td>@Html.DisplayFor(modelItem => item.QuestionType)</td>
                            <td>@Html.DisplayFor(modelItem => item.QuizId)</td>
                            @if (User?.Identity?.IsAuthenticated == true && User.IsInRole("Admin"))
                            {
                                <td>
                                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.QuestionId"><i class="bi bi-pencil-square"></i> Edit</a>
                                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.QuestionId"><i class="bi bi-eye"></i> Details</a>
                                    <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.QuestionId"><i class="bi bi-trash"></i> Delete</a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
