@model IEnumerable<OnlineLearningApp.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Courses</h2>

    <!-- Search Bar -->
    <div class="mb-4">
        <form asp-action="Filter" method="get" class="form-inline d-flex justify-content-center">
            <input type="text" name="searchString" class="form-control mr-2" placeholder="Search for a course..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var course in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@course.ImageURL" class="card-img-top" alt="@course.CourseName">
                    <div class="card-body">
                        <h5 class="card-title">@course.CourseName</h5>
                        <p class="card-text">@course.Description</p>
                        <p><strong>Category:</strong> @course.Category</p>
                        <p><strong>Start Date:</strong> @course.StartDate.ToString("dd MMM yy")</p>
                        <p><strong>End Date:</strong> @course.EndDate.ToString("dd MMM yy")</p>
                        <p><strong>Status:</strong> @course.Status</p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-primary">Show Details</a>
                        <a href="#" class="btn btn-success">Enroll Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
